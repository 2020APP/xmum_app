<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:padding="40dp"
    tools:context=".LoginMain">

    <ImageView
        android:id="@+id/logo"
        android:contentDescription="@string/xmum_logo"
        android:transitionName="xmum_logo_transition"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/xmum_logo" />

    <TextView
        android:id="@+id/slogan"
        android:transitionName="xmum_slogan_transition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="75dp"
        android:fontFamily="@font/baloo"
        android:text="@string/ss_txt"
        android:textSize="25sp" />

    <Button
        android:id="@+id/login_student"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baloo"
        android:text="@string/student_login_button" />

    <Button
        android:id="@+id/login_teacher"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baloo"
        android:text="@string/teacher_login_button" />
</LinearLayout>